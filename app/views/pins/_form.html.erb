<%= simple_form_for @pin,
  :html => { :multipart => true },
	wrapper: :vertical_form,
  defaults: { input_html: { class: "form-control" }, label: false } do |f| %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
    <%= f.input :image, as: :file, wrapper: :vertical_file_input %> 
    <%= f.input :description, placeholder: "Description" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
